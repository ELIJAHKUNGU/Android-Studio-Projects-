<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3ba63b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnToast"
        android:background="#50e6dc"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast" />

    <EditText
        android:id="@+id/txtdisplay"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="70sp"
        android:background="#d2ba2f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="hobby" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCountup"
            android:text="++"
            android:onClick="countUp"
            android:background="#1f48dc"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnCountdown"
            android:text="--"
            android:onClickListener="CountDown"
            android:background="#ef1fbf"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>